# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================

# Environment mode
ENV=production

# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
SUPABASE_DB_HOST=your-project-id.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_database_password_here
SUPABASE_DB_SSL=true

# ===========================================
# VECTOR DATABASE (Qdrant)
# ===========================================
# Option A: Qdrant Cloud
QDRANT_HOST=your-cluster.qdrant.io
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key

# Option B: Self-hosted (Fly.io/Railway)
# QDRANT_HOST=qdrant-internal.fly.dev
# QDRANT_PORT=6333

# ===========================================
# CACHE (Redis)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
# Set a strong password for production; do not leave blank
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=your_strong_redis_password_here

# ===========================================
# GEMINI LLM & EMBEDDINGS
# ===========================================
# Get API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# ===========================================
# CORS & SECURITY
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-frontend-domain.vercel.app

# ===========================================
# AUTHENTICATION (Clerk)
# ===========================================
CLERK_JWKS_URL=https://your-clerk-app.clerk.accounts.dev/.well-known/jwks.json
CLERK_ISSUER=https://your-clerk-app.clerk.accounts.dev
REQUIRE_AUTH=true

# ===========================================
# FILE STORAGE
# ===========================================
# Supabase Storage (recommended for production)
SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_STORAGE_BUCKET=documents

# Fallback local storage (for dev only - data lost on container restart)
DOCUMENT_STORAGE_PATH=/data/documents
MAX_UPLOAD_SIZE_MB=50

# ===========================================
# OBSERVABILITY
# ===========================================
LOG_LEVEL=INFO
JSON_LOGS=true
SENTRY_DSN=your_sentry_dsn

# ===========================================
# API
# ===========================================
API_PORT=8000
