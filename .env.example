# Supabase PostgreSQL connection details
# Replace placeholders with your actual Supabase project credentials.
SUPABASE_DB_HOST=your-project-id.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_database_password_here
SUPABASE_DB_SSL=true

# Redis connection details
# Used for caching and background tasks.
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant connection details
# Used for vector similarity search.
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# API configuration
# Port the FastAPI application will run on.
API_PORT=8000

# Document Storage
# Path where uploaded PDF files are stored (must be absolute).
# The application auto-creates this directory at startup if it doesn't exist.
# In Docker, this is mounted as a named volume (document_data:/data/documents).
# For local development outside Docker, ensure the path exists and is writable.
DOCUMENT_STORAGE_PATH=/data/documents

# Maximum upload file size in megabytes (must be between 1 and 5000).
MAX_UPLOAD_SIZE_MB=50
